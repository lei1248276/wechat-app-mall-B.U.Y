.goods_card {
  width: 100vw;
  height: 320rpx;
  border-bottom: 2rpx solid #98989f;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(216, 219, 225, 0.3);
}
.goods_card .bgColor {
  background: #1e2603;
}
.goods_card .button {
  position: relative;
  width: 15vw;
  height: 100%;
}
.goods_card .button .click {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}
.goods_card .goods {
  width: 100vw;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_card .goods .custom_img {
  margin: 0 10rpx;
  border: 2rpx solid black;
}
.goods_card .goods .goods_detail {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: left;
}
.goods_card .goods .goods_detail .title {
  font-size: 34rpx;
  color: #666;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_card .goods .goods_detail .custom_params {
  max-width: 400rpx;
  height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
}
.goods_card .goods .goods_detail .discount_price {
  color: #B20F25;
}
.goods_card .goods .goods_detail .old_price {
  position: relative;
  right: -30rpx;
  color: #98989f;
  text-decoration: line-through;
}

.delete, .collect {
  display: inline-block;
  width: 16vw;
  height: 320rpx;
  color: #fff;
  line-height: 320rpx;
  text-align: center;
  background-color: #B20F25;
}

.collect {
  background-color: #70a7e8;
}
