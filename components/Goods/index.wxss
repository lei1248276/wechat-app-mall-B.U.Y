.goods {
  height: 50vh;
  padding: 70rpx 20rpx;
}
.goods .scroll_view {
  height: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.goods .scroll_view .goods_item {
  width: 45vw;
  height: 100%;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #666;
}
.goods .scroll_view .goods_item .item_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}
.goods .scroll_view .goods_item .discount_price {
  color: #B20F25;
}
.goods .scroll_view .goods_item .origin_price {
  position: relative;
  right: -30rpx;
  color: #98989f;
  text-decoration: line-through;
}
