<view class="goods">
  <scroll-view class="scroll_view"
               scroll-x
               enable-flex
               bind:scroll="onScroll">
    <view class="goods_item"
          wx:for="{{ list }}"
          wx:key="iid"
          data-iid="{{ item.iid || item.item_id }}"
          bind:tap="toGoodsDetail">
      <van-image src="{{ item.image || item.show.img }}"
                 width="320rpx"
                 height="416rpx"
                 fit="cover"
                 lazy-load
      />
      <view class="item_name">{{ item.title }}</view>
      <text class="discount_price">ï¿¥{{ item.price }}</text>
      <text class="origin_price">{{ item.orgPrice }}</text>
    </view>
  </scroll-view>

  <van-progress percentage="{{ percentage }}"
                show-pivot="{{ false }}"
                color="#222"
                stroke-width="4rpx"
  />
</view>