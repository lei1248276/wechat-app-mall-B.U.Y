.goods_detail_container {
  width: 100%;
}
.goods_detail_container .goods_detail {
  padding: 10rpx 20rpx;
  color: #222;
}
.goods_detail_container .goods_detail .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 44rpx;
  margin-bottom: 10rpx;
}
.goods_detail_container .goods_detail .price .discount_price {
  color: #B20F25;
}
.goods_detail_container .goods_detail .price .old_price {
  color: #B8B8B8;
  text-decoration: line-through;
}
.goods_detail_container .goods_detail .columns {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.goods_detail_container .goods_detail .columns .info {
  font-size: 24rpx;
  color: #f5f5f5;
  padding: 4rpx;
  background-color: #77d880;
}
.goods_detail_container .goods_detail .title {
  font-weight: bold;
  margin-bottom: 10rpx;
}
