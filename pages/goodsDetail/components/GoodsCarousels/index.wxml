<view class="goods-carousels">
    <swiper class="swiper"
            autoplay
            circular
            bind:change="onChange">
        <swiper-item wx:for="{{ list }}"
                     wx:key="index"
                     data-index="{{ index }}">
            <van-image src="{{ item }}"
                       width="100%"
                       height="100%"
            />
        </swiper-item>
    </swiper>

    <text class="discount">{{ discount }}</text>

    <van-icon class="heart"
              name="{{ collected ? 'like' : 'like-o' }}"
              color="{{ collected ? '#B20F25' : '' }}"
              size="45rpx"
              bind:click="onCollect"/>

    <indicator class="indicator"
               count="{{ list.length }}"
               i="{{ index }}"
               w="25rpx"
               h="4rpx"
    />

    <van-button class="btn"
                icon="share"
                type="mini"
                plain
                custom-style="border: 4rpx solid #222;">
        分享
    </van-button>
</view>